<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="container" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="sample.LoginPageController">
  <children>
    <AnchorPane layoutX="50.0" layoutY="50.0" prefHeight="300.0" prefWidth="500.0" styleClass="row">
      <children>
        <TextField fx:id="login_textField" focusTraversable="false" layoutX="20.0" layoutY="52.0" prefHeight="41.0" prefWidth="461.0" promptText="Логин...." styleClass="form-control" />
        <PasswordField fx:id="password_textField" focusTraversable="false" layoutX="20.0" layoutY="109.0" prefHeight="41.0" prefWidth="461.0" promptText="Пароль..." styleClass="form-control" />
        <Button fx:id="auth_button" onAction="#passwordAuth" layoutX="20.0" layoutY="193.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="461.0" styleClass="btn" text="Вход" />
        <Button fx:id="authkey_button" onAction="#goAuthkey" layoutX="20.0" layoutY="237.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="461.0" styleClass="btn" text="Вход через ключ" />
        <Label fx:id="error_label" disable="false" focusTraversable="false" layoutX="223.0" layoutY="162.0" styleClass="error_title" text="Ошибка" visible="false" />
      </children>
    </AnchorPane>
    <ImageView fitHeight="75.0" fitWidth="75.0" layoutX="263.0" layoutY="16.0" pickOnBounds="true" preserveRatio="true">
      <image>
        <Image url="@assets/image/favicon_1_-5.png" />
      </image>
    </ImageView>
  </children>
  <stylesheets>
    <URL value="@assets/style/styles.css" />
  </stylesheets>
</AnchorPane>
